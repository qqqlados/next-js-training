generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id       String   @id @default(cuid())
  userId   String
  tags     String[] @default([])
  title    String
  body     String
  likes    Int      @default(0)
  dislikes Int      @default(0)
  user     User     @relation(fields: [userId], references: [id])
}

model User {
  id       String  @id @default(cuid())
  name     String?
  username String
  email    String  @unique
  phone    String?
  website  String?
  password String  @default("default_password")
  albums   Album[]
  posts    Post[]
}

model Photo {
  id           String @id @default(cuid())
  albumId      String
  title        String
  url          String @unique
  thumbnailUrl String @unique
  album        Album  @relation(fields: [albumId], references: [id])
}

model Album {
  id     String  @id @default(cuid())
  userId String
  title  String
  user   User    @relation(fields: [userId], references: [id])
  photos Photo[]
}
